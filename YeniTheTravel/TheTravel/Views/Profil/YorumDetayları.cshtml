@model TheTravel.Models.Sınıflar.Yorumlar

@{
    ViewBag.Title = "Yorum Detayları";
    Layout = "~/Views/Shared/_ProfilLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-3">Yorum Detayları</h2>

    <div class="card shadow-sm">
        <div class="card-body">  
            <p class="card-text"><strong>Yorum İçeriği:</strong> @Model.Yorum</p> 
        </div>
    </div>

    <a href="@Url.Action("Yorumlarim", "Profil")" class="btn btn-primary mt-3">Geri Dön</a>
</div>