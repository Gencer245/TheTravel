@{
    Layout = null;
}

<!DOCTYPE HTML>
<html>
<head>
    <title>Free Easy-Trip Website Template | Home :: w3layouts</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <link rel="stylesheet" href="~/web/css/style.css" type="text/css" media="all" />
    <link href="~/web/css/slider.css" rel="stylesheet" type="text/css" media="all" />

    <script src="~/web/js/jquery.min.js"></script>
    <script src="~/web/js/responsiveslides.min.js"></script>

    <script>
        $(function () {
            $("#slider1").responsiveSlides({
                auto: true,
                nav: true,
                speed: 500,
                namespace: "callbacks",
            });
        });
    </script>

    @RenderSection("Scripts", required: false)

    <style>
        .grid1-l-img img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
        }

        .con-right {
            display: flex;
            align-items: center;
        }

        .profile-box {
            display: flex;
            align-items: center;
            background-color: #C2A385;
            border-radius: 25px;
            padding: 5px 15px;
            transition: background-color 0.3s;
            cursor: pointer;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
            margin-left: 10px;
            margin-top: -20px;
        }

            .profile-box:hover {
                background-color: #b8936e;
            }

        .grid1-l-desc p {
            font-size: 18px;
            margin-left: 10px;
            color: white;
            margin-bottom: 0;
            font-weight: 500;
            line-height: 50px;
        }

        .grid1-l-desc a {
            text-decoration: none;
            color: inherit;
        }
    </style>
</head>
<body>
    <div class="header">
        <div class="wrap">
            <div class="logo">
                <a href="/About/Index/">
                    <img src="~/web/images/new_logo-Photoroom.png" alt="" />
                </a>
            </div>

            <div class="con-right">
                @if (Session["Kullanici"] != null)
                {
                    <div class="grid1-l-desc">
                        <a href="/Profil/Index/">
                            <div class="profile-box">
                                <div class="grid1-l-img">
                                    <img src="~/web2/images/avatar.png" alt="">
                                </div>
                                <p>@Session["Kullanici"]</p>
                            </div>
                        </a>
                    </div>
                }
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </div>
    </div>

    <div class="header-bottom">
        <div class="wrap">
            <ul id="nav">
                <li><a href="/Default/Index/">Ana Sayfa</a></li>
                <li><a class="hsubs" href="/About/Index/">Hakkımızda</a></li>
                <li><a class="hsubs" href="/Rehber/Index/">Rehber</a></li>
                <li><a class="hsubs" href="/Blog/Index/">Bloglar</a></li>
                <li><a href="/İletisim/Index/">İletişim</a></li>
            </ul>
        </div>
    </div>

    <div class="content">
        @RenderBody()
    </div>

    <div class="footer-bottom">
        <div class="wrap">
            <div class="copy">
                <p>&copy; 2025 TheTravel. Tüm Hakları Saklıdır. </p>
            </div>
        </div>
    </div>
</body>
</html> 