@model TheTravel.Models.Sınıflar.Blog

@{
    ViewBag.Title = "Yeni Blog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("YeniBlog", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-group">
    @Html.LabelFor(x => x.Baslik)
    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })

    @Html.LabelFor(x => x.Tarih)
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control", type = "date" })

    @Html.LabelFor(x => x.BlogImage)
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })

    @Html.LabelFor(x => x.Aciklama)
    @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control" })

    <!-- Kullanıcı ID'si: Burada kullanıcı ID'sini elle girebilirsiniz -->
    @Html.LabelFor(x => x.KullaniciID)
    @Html.TextBoxFor(x => x.KullaniciID, new { @class = "form-control" })
</div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
}
