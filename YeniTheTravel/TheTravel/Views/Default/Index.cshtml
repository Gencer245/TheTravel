@using TheTravel.Models.Sınıflar
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<!DOCTYPE HTML>
<html>
<head>
    <style>
        .con-text {
            display: flex;
            align-items: center;
            justify-content: start;
            gap: 15px; /* Görsel ile metin arasındaki boşluk */
            padding: 5px 0; /* Üst ve alt boşluk */
            border-bottom: 2px solid #ddd; /* Çizgiyi belirginleştirme */
        }

            .con-text:last-child {
                border-bottom: none; /* Son elemanda çizgi olmasın */
            }

        .grid1-img img {
            width: 50px; /* Görsellerin boyutunu kontrol et */
            height: 50px;
        }

        .grid1-desc p {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .bold-text {
            color: black;
        }
    </style>
</head>
<body>
    <div class="header-banner">
        <div class="wrap">
            <div class="banner">
                <div class="indent">
                    <h2 class="indent-left margin-bot">Gezi Planla</h2>
                    <div class="banner-left">
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/ucak_foto.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Rotayı Oluştur</p>
                            </div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/yemek_foto.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Yeni Lezzetler Keşfet</p>
                            </div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/insanlar_foto.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>İnsanlarla Tanış</p>
                            </div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/smile-face.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Tadını Çıkar</p>
                            </div>
                        </div>
                    </div>
                    <div class="header_bottom_right_images">

                        <div class="slider" style="width:650px; height:365px;">
                            <ul class="rslides" id="slider1">
                                @foreach (var x in Model)
                                {
                                    <li><img src="@x.BlogImage" alt=""></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
    <div class"content">
        <div class="wrap">
            <div class="wrapper">
                <div class="con-top">
                    <h2>TheTravel'e Hoşgeldiniz</h2>
                    <p class="bold-text">Gezdiğin yerleri paylaşma zamanı !</p>
                </div>
                @Html.Action("Partial1", "Default")
                <br />
                <div class="grids">
                    <div class="box1">
                        @Html.Action("Partial2", "Default")
                        @Html.Action("Partial3", "Default")
                        <div class="clear"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

